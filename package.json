{
  "name": "@tech-dapp/monorepo",
  "version": "0.1.0",
  "description": "Monorepo for the CSTK token sale dapp and contracts",
  "private": true,
  "workspaces": {
    "packages": ["solidity", "app"],
    "nohoist": [
      "**/@nomiclabs/**",
      "**/typescript",
      "**/ts-node"
    ]
  },
  "scripts": {
    "build": "yarn workspaces run build",
    "build:app": "yarn workspace @tech-dapp/app run build",
    "build:contracts": "yarn workspace @tech-dapp/solidity run build",
    "start:node": "yarn workspace @tech-dapp/solidity run node",
    "test": "yarn workspaces run test",
    "test:contracts": "yarn workspace @tech-dapp/solidity run test"
  }
}
